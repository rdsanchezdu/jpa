                                <arquillian.launch>wildfly_remote</arquillian.launch>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

<!--    Docker-->
        <profile >
            <id>arq-docker</id>
